@{
    ViewData["Title"] = "Admin";
}

<h4>Admin View</h4>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
       
        <form id="form-postnotification" asp-action="PostNotification" asp-controller="Notification" method="post" class="col-12">

            <div class="col-9">
                <textarea rows="5" class="form-control" type="text" id="txtMessage"></textarea>
            </div>
            <div class="row">&nbsp;</div>
            <div class="col-3">
                <button name="uploadbtn" id="submit-btn" class="btn btn-primary" type="button">Send Notification</button>
            </div>

        </form>
        
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <table id="table-admin-noti-details" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Message</th>
                    <th>Sent Date</th>
                    <th>Acknowledgement Date</th>
                    <th>IP</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
